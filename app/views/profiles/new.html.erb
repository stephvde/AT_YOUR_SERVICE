<div class="container">
  <div class="row">
    <div class="col-md-4 pic-square">
      <h3>Upload your profile picture</h3>
        <%= image_tag "no_avatar.jpg", class: "profile-avatar" %>
       <!--  Add a picture form -->
    </div>
    <div class="col-md-8">
      <h2>Basic info</h2>
      <%= simple_form_for @profile do |f| %>
      <%= f.input :photo %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <h4>Address</h4>
      <%= f.input :address %>
      <%= f.input :city %>
      <%= f.input :zip_code %>
      <%= f.input :country %>
      <%= f.input :bank_account %>
      <%= f.submit %>
      <% end %>
      <br>
      <div>
        <%= link_to "Back to my services", services_path, class: "services-link" %>
      </div>
    </div>
  </div>
</div>
