<div class="text-center padded features">
  <div class="bannersrc" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://www.moneyearningideas.com/wp-content/uploads/make-money-as-a-dog-walker.jpg);">
    <div class="banner-content">
      <div class="container">
        <h2>Search for a Service</h2>
        <div class="search-bar">
          <%= form_tag categories_path, method: :get, :class => "form-inline" do %>
            <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Look for a service"
            %>
            <%= submit_tag 'submit', class: "btn btn-primary"  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
  <h3>Explore our categories</h3>
    <ul class="list-inline">

      <li><%= link_to category_path(1) do %>
        <i class="fas fa-screwdriver"></i>
        <% end %>
        <p>DIY</p>
      </li>
      <li><%= link_to category_path(2) do %>
        <i class="fas fa-paw"></i>
        <% end %>
        <p>Pets</p>
      </li>
      <li><%= link_to category_path(3) do %>
        <i class="fas fa-broom"></i>
        <% end %>
        <p>Housekeeping</p>
      </li>
      <li><%= link_to category_path(4) do %>
        <i class="fas fa-gift"></i>
        <% end %>
        <p>Events</p>
      </li>
      <li><%= link_to category_path(5) do %>
        <i class="fas fa-leaf"></i>
        <% end %>
        <p>Gardening</p>
      </li>
      <li><%= link_to category_path(6) do %>
        <i class="fas fa-car"></i>
        <% end %>
        <p>Transport</p>
      </li>
      <li><%= link_to category_path(7) do %>
        <i class="fas fa-book"></i>
        <% end %>
        <p>Tutoring</p>
      </li>
      <li><%= link_to category_path(8) do %>
        <i class="fas fa-tv"></i>
        <% end %>
        <p>IT</p>
      </li>
      <li><%= link_to category_path(9) do %>
        <i class="fas fa-child"></i>
        <% end %>
        <p>Child care</p>
      </li>
      <li><%= link_to category_path(10) do %>
        <i class="fas fa-briefcase-medical"></i>
        <% end %>
        <p>Medical</p>
      </li>
      <li><%= link_to category_path(11) do %>
        <i class="fas fa-ellipsis-h"></i>
        <% end %>
        <p>Other</p>
      </li>
    </ul>
  </div>
<!-- Show results -->
  <div class="row">
    <% if @result == "service"%>
      <% @services.each do |service| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/users/tgenaitay');">
          <div class="card-category"> <%= service.category.name %> </div>
          <div class="card-description"> <h2><%= service.name %></h2> </div>
          <%= link_to service.name, service_path(service), class:"card-link" %>
        </div>
      </div>
      <% end %>
    <% end %>
   </div>

