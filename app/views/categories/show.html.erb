<div class="text-center padded features">
  <div class="banner search-show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://www.moneyearningideas.com/wp-content/uploads/make-money-as-a-dog-walker.jpg);"> <!-- needs to be changed to local. -->
    <div class="banner-content">
      <div class="container">
        <h1>Category: <%= @category.name %></h1>
          <p>Choose from our catalogue of services now!</p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
      <% @services.each do |service| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
        <% if service.category_id == Category.find(params[:id]).id %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path service.photo %>');">
            <div class="card-category"><%= service.name %></div>
            <div class="card-description">
              <p>From: $ <%= service.hourly_rate %></p>
            </div>
            <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            <%= link_to "", service_path(service), class: "card-link" %>
          </div>
        <% end %>

    </div>
    <% end %>
  </div>
</div>
