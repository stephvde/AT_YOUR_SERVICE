<div class="container">
  <div class="row">
    <h1>Add a new Service</h1>
    <h2>Complete the following information</h2>
    <%= simple_form_for @service do |f| %>
    <%= f.input :name %>
    <%= f.association :category, collection: @categories, prompt: "Choose a category"%>
    <%= f.input :description %>
    <%= f.input :hourly_rate %>
    <%= f.input :photo %>
    <%= f.submit class: 'btn btn-create-service' %>
    <% end %>
    <br>
    <%= link_to "Back to My Services", my_services_path, class: 'btn btn-back-to-services' %>
  </div>
</div>
